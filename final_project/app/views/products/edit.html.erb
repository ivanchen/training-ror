	<div class="list_head">
      <h2>Edit : <%=@product.name%></h2>
    </div>
    <div class="content" style="padding: 50px 0 0 0 ;">
		<%= form_for @product, :html => {:class=>"form_standart"} do |f| %>
		  <%= f.hidden_field :id , :value => @product.id %><br/>
		  Name: <br/><%= f.text_field :name, :value => @product.name %><br/><br/>
		  Price: <br/><%= f.text_field :price,:value =>  @product.price%><br/><br/>
		  Weight: <br/><%= f.text_field :weight,:value =>  @product.weight%><br/><br/>
		  Description: <br/><%= f.text_area :description, :value => @product.description, :style => "width:100%; height: 100px; box-shadow: inset 2px 2px 2px #333;" %><br/><br/>
		  
		  <%= f.hidden_field :user_id , :value =>@product.user.id%>
		  <%= f.hidden_field :category_id , :value =>@product.category.id%>
		  <%=f.submit :update%><br/>
		<% end %>
	</div>