	<div class="list_head">
      <h2>New Product</h2>
    </div>
    <div class="content" style="padding: 50px 0 0 0 ;">
		<%= form_for @product, :html => {:class=>"form_standart"} do |f| %>
		  <%= f.hidden_field :id %><br/>
		  Name: <br/><%= f.text_field :name%><br/><br/>
		  Category: <br/><%= f.select :category_id , @category.map {|r| [r.name,r.id] }%><br/>
		  <br />
		  Price: <br/><%= f.text_field :price%><br/><br/>
		  Weight: <br/><%= f.text_field :weight%><br/><br/>
		  Description: <br/><%= f.text_area :description, :style => "width:100%; height: 100px; box-shadow: inset 2px 2px 2px #333;" %><br/><br/>
		  
		  <%= f.hidden_field :user_id , :value =>current_user.id%>
		  <%=f.submit :create%><br/>
		<% end %>
	</div>