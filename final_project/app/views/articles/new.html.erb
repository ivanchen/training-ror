	<div class="list_head">
      <h2>New Article</h2>
    </div>
    <div class="content" style="padding: 50px 0 0 0 ;">
		<%= form_for @article, :html => {:class=>"form_standart"} do |f| %>
		  <%= f.hidden_field :id %><br/>
		  Title: <br/><%= f.text_field :title%><br/><br/>
		  Body: <br/><%= f.text_area :body, :style => "width:100%; height: 100px; box-shadow: inset 2px 2px 2px #333;" %><br/><br/>
		  <%= f.hidden_field :user_id , :value =>current_user.id%>
		  <%=f.submit :create%><br/>
		<% end %>
	</div>