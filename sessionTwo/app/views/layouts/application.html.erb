<!DOCTYPE html>
<html>
<head>
  <title>Latihan RoR</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="menu">
		<div class="left">
			
			<ul>
				<li>
					<% if current_user.present? && current_user.is_admin? %>
					<%= link_to "Articles", admin_articles_path %>
					<% else %>
					<%= link_to "Articles", articles_path %>
					<% end %>
				</li>
			</ul>

		</div>
		<div class="right">
			<div class="status">
				<%= raw(welcome_text) %>
			</div>
		</div>
	</div>
	<br class="clear">
	

<%= yield %>

</body>
</html>
