<style type="text/css">
table td,th{
	border: 1px solid #ccc;
}
</style>
<p><%=flash[:notice]%></p>

<table>
	<tr>
		<th>
			ID
		</th>
		<th>
			Title
		</th>
		<th>
			Body
		</th>
		<th>
			Rating
		</th>
		<th>
			ID Writer
		</th>
		<th>
			Action
		</th>
	</tr>
	<% @articles.each do  |article| %>
		<tr>
			<td>
				<%=article.id%>
			</td>
			<td>
				<%=article.title%>
			</td>
			<td>
				<%=article.body%>
			</td>
			<td>
				<%=article.rating%>
			</td>
			<td>
					<%=article.user.first_name if article.user.present?%>
			</td>
			<td>
				<%= link_to "Edit", edit_article_path(article.id) %>
				<%= link_to "Delete", article_path(article.id), :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>

<% if(@status=="edit")%>

<% end %>