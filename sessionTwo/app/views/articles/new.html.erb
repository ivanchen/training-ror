<div class="wrap">
	<h1>New Article</h1>
	<p><%=@status%></p>

	<%#= form_tag(articles_create_path, :method => :post) do %> 
	<%= form_for @article do |f|%> 
	  Title: <br /><%= f.text_field :title %><br/><br />
	  Body: <br /><%= f.text_area :body , :style => "width:100%; height: 100px; box-shadow: inset 2px 2px 2px #333;" %><br /><br />
	  <%= f.hidden_field :user_id , :value => current_user.id%>
	  <%=f.submit :create%>
	<% end %>
</div>